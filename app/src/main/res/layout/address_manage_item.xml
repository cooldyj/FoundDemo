<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/add_manage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="小李"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/add_manage_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/add_manage_name"
                android:maxLines="1"
                android:text="18923456789"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/add_manage_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_manage_name"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:text="地址：上海 上海市 静安区 什么东大街什么东大街什么东大街"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_15" />

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/add_manage_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="edit"
            android:scaleType="fitXY"
            android:src="@mipmap/edit_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="8dp"
        android:background="@color/line_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/add_manage_default_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_manage_check_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="check status"
                android:scaleType="fitXY"
                android:src="@mipmap/checked_false" />

            <TextView
                android:id="@+id/add_manage_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:text="设为默认地址"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_manage_delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right">

            <ImageView
                android:id="@+id/add_manage_delete_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:contentDescription="delete"
                android:scaleType="fitXY"
                android:src="@mipmap/del_icon" />

            <TextView
                android:id="@+id/add_manage_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="删除"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_15" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>