<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/coupon_unused_icon"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@mipmap/coupon_icon_bg_unused"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:text="+30.00%"
        android:textColor="@color/white"
        android:textSize="@dimen/text_super_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coupon_unused_tyep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_type_text_blue"
            android:padding="3dp"
            android:text="加息券"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_small" />

        <TextView
            android:id="@+id/coupon_unused_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="1天加息券"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/coupon_unused_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="有效期:2017-01-01"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_super_small" />

        <TextView
            android:id="@+id/coupon_unused_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="移动用户专享"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_super_small" />

    </LinearLayout>

    <ImageView
        android:id="@+id/coupon_unused_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/checked_true"
        android:contentDescription="checked icon"
        android:visibility="gone"/>
</LinearLayout>