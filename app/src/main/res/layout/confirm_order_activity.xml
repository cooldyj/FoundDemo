<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <com.chinayszc.mobile.widget.CommonTitleView
        android:id="@+id/confirm_order_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <RelativeLayout
        android:id="@+id/confirm_order_add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/confirm_order_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="loaction icon"
            android:src="@mipmap/home_location_icon" />

        <TextView
            android:id="@+id/confirm_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/confirm_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/confirm_order_phone"
            android:layout_toRightOf="@id/confirm_order_icon"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/confirm_order_into"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/confirm_order_name"
            android:layout_marginTop="5dp"
            android:contentDescription="loaction icon"
            android:src="@mipmap/into_icon" />

        <TextView
            android:id="@+id/confirm_order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_order_name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/confirm_order_into"
            android:layout_toRightOf="@id/confirm_order_icon"
            android:maxLines="2"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

    </RelativeLayout>

