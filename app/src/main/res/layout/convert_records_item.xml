<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/convert_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="2017 0201 18:09"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/convert_record_point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="积分"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/convert_record_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/convert_record_point_text"
        android:text="100"
        android:textColor="@color/text_light_red"
        android:textSize="@dimen/text_middle" />

    <View
        android:id="@+id/convert_record_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/convert_record_date"
        android:layout_marginTop="5dp"
        android:background="@color/line_color" />

    <ImageView
        android:id="@+id/convert_record_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/convert_record_line"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:contentDescription="product img"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/convert_record_img"
        android:layout_alignTop="@id/convert_record_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/convert_record_img"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/convert_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="白色充电器"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/convert_record_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="订单号：123213122sad"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_middle" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/convert_record_img"
        android:layout_marginTop="5dp"
        android:background="@color/line_color" />

</RelativeLayout>