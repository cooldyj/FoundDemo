<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/home_top_gallery"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:image_scale_type="fit_xy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/home_point_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="point market"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_point_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/home_point_store"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_middle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_invite_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="point market"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_invite_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/home_invite_friends"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_middle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_coupon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="point market"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_coupon_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/home_coupon"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_middle" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/check_in_get_discount"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/home_check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_get_it"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/text_17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_one_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_new_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/home_expected_annualize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expected_annualize"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/home_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/home_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/home_buy_btn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_btn_bg"
            android:gravity="center"
            android:text="@string/buy_immediately"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/line_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/home_more_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/view_more"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <com.youth.banner.Banner
        android:id="@+id/home_middle_gallery"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:image_scale_type="fit_xy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_new_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/new_guide"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_17" />

        <TextView
            android:id="@+id/home_about_ys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/about_ys"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_17" />

    </LinearLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/app_margin_left"
        android:background="@color/white"
        android:gravity="left"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/hot_products"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />-->

</LinearLayout>