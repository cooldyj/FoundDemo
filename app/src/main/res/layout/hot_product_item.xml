<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:text="乙晟短期年化"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_percent_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_marginLeft="12dp"
        android:text="9.0"
        android:textColor="@color/text_red"
        android:textSize="@dimen/text_ss_large" />

    <TextView
        android:id="@+id/item_percent_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_percent_num"
        android:layout_toRightOf="@id/item_percent_num"
        android:text="%"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_percent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_percent_num"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_percent_num"
        android:layout_marginRight="100dp"
        android:gravity="center_vertical"
        android:text="期限270天"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_annualize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_percent_num"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:text="预期年化收益率"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/item_buy_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_annualize"
        android:layout_alignRight="@id/item_percent_date"
        android:text="100元起购"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_middle" />

</RelativeLayout>