<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/asset_bg"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/total_asset"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/asset_transaction_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/transaction_record"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <TextView
                android:id="@+id/asset_total_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:textColor="@color/text_light_red"
                android:textSize="@dimen/text_ss_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/total_income"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/asset_transaction_earnings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/earning_record"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <TextView
                android:id="@+id/asset_total_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:textColor="@color/text_light_red"
                android:textSize="@dimen/text_ss_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:text="@string/on_way_amount"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/asset_on_way_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:textColor="@color/text_light_red"
                android:textSize="@dimen/text_ss_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:text="@string/withdraw_amount"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/asset_withdraw_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:gravity="center"
                android:textColor="@color/text_light_red"
                android:textSize="@dimen/text_ss_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/asset_margin_top"
                android:layout_marginTop="@dimen/asset_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asset_recharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/recharge"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/asset_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/withdraw"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/asset_goto_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/goto_manage"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>