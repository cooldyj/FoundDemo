<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <com.chinayszc.mobile.widget.CommonTitleView
        android:id="@+id/financial_product_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/financial_product_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/text_dark"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/financial_product_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/financial_product_percent"
                    android:gravity="top"
                    android:text="%"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/financial_product_expected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/financial_product_symbol"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/financial_product_percent"
                    android:text="@string/expected_earnings"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/financial_product_buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/financial_product_percent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/discount"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/product_coupon_bg_white"
                    android:padding="5dp"
                    android:text="@string/cut_when_reach"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/product_coupon_bg_white"
                    android:padding="5dp"
                    android:text="@string/cut_immediately"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/product_coupon_bg_white"
                    android:padding="5dp"
                    android:text="@string/add_earning_coupon"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/invist_date"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/financial_product_limit_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interst_date"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/financial_product_start_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_amount"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/financial_product_buy_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/financial_product_end_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <FrameLayout
                    android:id="@+id/financial_product_safety"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/me_item_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:gravity="center_vertical"
                        android:text="@string/asset_safety"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:contentDescription="into icon"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/into_icon" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <FrameLayout
                    android:id="@+id/financial_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/me_item_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:gravity="center_vertical"
                        android:text="@string/product_detail"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:contentDescription="into icon"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/into_icon" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <FrameLayout
                    android:id="@+id/financial_product_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/me_item_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:gravity="center_vertical"
                        android:text="@string/disclaimer"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_middle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:contentDescription="into icon"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/into_icon" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/financial_product_buy"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="@dimen/app_margin_left"
                    android:background="@drawable/common_btn_bg"
                    android:gravity="center"
                    android:text="@string/buy_immediately"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_middle" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>