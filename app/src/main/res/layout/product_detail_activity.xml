<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <com.chinayszc.mobile.widget.CommonTitleView
        android:id="@+id/product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/product_img_height"
                android:layout_height="@dimen/product_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_margin_left"
                android:background="@drawable/product_img_bg">

                <ImageView
                    android:id="@+id/product_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:contentDescription="product img"
                    android:scaleType="fitXY" />

            </FrameLayout>

            <TextView
                android:id="@+id/product_detail_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="@dimen/text_middle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_left"
                    android:text="@string/product_introduction"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/product_detail_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_left"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_left"
                    android:text="@string/instructions"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/product_detail_instructoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_left"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/product_detail_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="@dimen/app_margin_left"
                    android:background="@drawable/common_btn_bg"
                    android:gravity="center"
                    android:text="@string/exchange_immediately"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_middle" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>