<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
    </style>

    <!-- Activity In and Out Animation -->
    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- 自定义Dialog样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item><!--背景-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--浮现在activity之上-->
        <item name="android:windowFrame">@null</item> <!--边框-->
        <item name="android:windowCloseOnTouchOutside">false</item> <!--点击外部不消失-->
        <item name="android:backgroundDimEnabled">true</item><!--对话框背景是灰暗的-->
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <!-- 自定义Dialog动画 -->
    <style name="CustomDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/app_dialog_enter</item> <!--打开动画-->
        <item name="android:windowExitAnimation">@anim/app_dialog_exit</item> <!--关闭动画-->
    </style>

    <!-- 选择银行Dialog样式 -->
    <style name="ChooseBankDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item><!--背景-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--浮现在activity之上-->
        <item name="android:windowFrame">@null</item> <!--边框-->
        <item name="android:windowCloseOnTouchOutside">false</item> <!--点击外部不消失-->
        <item name="android:backgroundDimEnabled">true</item><!--对话框背景是灰暗的-->
        <item name="android:windowAnimationStyle">@style/ChooseBankAnimation</item>
    </style>

    <!-- 选择银行Dialog动画 -->
    <style name="ChooseBankAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bank_dialog_enter</item> <!--打开动画-->
        <item name="android:windowExitAnimation">@anim/bank_dialog_exit</item> <!--关闭动画-->
    </style>
</resources>
